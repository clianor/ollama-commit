{
	"compilerOptions": {
		"target": "es2021",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true
	},
	"exclude": ["dist"]
}